{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "semiColons": false
    }
  },
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "tasks": {
    "dev": "deno bundle --watch ./app.ts ./app.js",
    "serve": "deno run --allow-net --allow-read https://deno.land/std@0.177.0/http/file_server.ts --port=3000"
  }
}
