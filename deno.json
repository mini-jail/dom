{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "semiColons": false
    }
  },
  "compilerOptions": {
    "lib": ["DOM", "ESNext"]
  },
  "tasks": {
    "serve": "deno run --allow-net --allow-read https://deno.land/std/http/file_server.ts ./dev --port=3000",
    "dev": "deno bundle --import-map=import_map.json --watch ./dev/app.ts ./dev/app.js"
  }
}
